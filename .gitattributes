# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Force LF line endings for all text files
*.py text eol=lf
*.pyi text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
Makefile text eol=lf
Dockerfile text eol=lf
requirements*.txt text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
LICENSE* text eol=lf
CONTRIBUTING* text eol=lf

# Binary files (explicitly marked to avoid text processing)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.webp binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Python specific
*.pyc binary
*.pyo binary
*.pyd binary
*.egg binary
*.whl binary

# Archives
*.7z binary
*.gz binary
*.rar binary
*.tar binary
*.zip binary

# Fonts
*.ttf binary
*.otf binary
